citEntry(entry = "Manual",
         title        = "{peacesciencer}: A User's Guide for Quantitative Peace Science in R",
         author       = person("Steven V. Miller"),
         year         = "2021",
         key          = "peacesciencer-package",
         url          = "http://svmiller.com/peacesciencer/",

         textVersion  =
           paste("Miller, Steven V. 2021.",
                 "{peacesciencer}: A User's Guide for Quantitative Peace Science in R",
                 "http://svmiller.com/peacesciencer/")
)
